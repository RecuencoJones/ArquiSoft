<?xml version="1.0" encoding="ISO-8859-1"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="PersistenciaTest"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>myusick.model.entities.Aptitud</class>
        <class>myusick.model.entities.Grupo</class>
        <class>myusick.model.entities.Persona</class>
        <class>myusick.model.entities.Publicacion</class>
        <class>myusick.model.entities.Publicante</class>
        <class>myusick.model.entities.Tag</class>
		<properties>
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="create" />
			<!-- <property name="hibernate.default_schema" value="public"/> -->

			<!-- MYSQL -->
			<!-- +++++ -->

			<!-- En lugar de "usuario" poned vuestro nombre de usuario, y en lugar 
				de "password" vuestra contraseña. ! -->
			<!-- Además, en lugar de "puerto" tenéis que poner el número de puerto 
				donde está escuchando vuestro servidor MySQL. -->
			<!-- Por último, reemplazad "bd" con el nombre de BD deseado. -->
			<!--<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>-->
			<!--<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/mydb"/>-->
			<!--<property name="javax.persistence.jdbc.user" value="myusick"/>-->
            <!--<property name="javax.persistence.jdbc.password" value="1234"/>-->
            <property name="hibernate.connection.username" value="myusick"/>
            <property name="hibernate.connection.password" value="1234"/>
            <property name="hibernate.connection.driver" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/mydb"/>
		</properties>
	</persistence-unit>
</persistence>
